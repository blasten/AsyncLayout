{
  "name": "uitableview.js",
  "version": "0.0.1",
  "description": "UITableView",
  "main": "UITableView.js",
  "scripts": {
    "test": "mocha",
    "serve": "python server.py",
    "build": "npm-run-all transpile:list-view-es6 build:inline-styles",
    "transpile:list-view-es6": "BABEL_ENV=es6 rollup src/components/all.js -f umd -n Layout -c build/rollup.config.es6.js --output dist/Layout.js",
    "minify:list-view-es6": "uglifyjs Layout.js -o Layout.min.js",
    "build:inline-styles": "rollup build/inline-styles.js -f cjs --output dist/inline-styles.js && node dist/inline-styles.js > dist/layout.css && rm -f dist/inline-styles.js",

    "transpile:list-view-es5": "BABEL_ENV=es5 rollup src/ListView.js -f umd -n ListView -c build/rollup.config.es5.js --output ListView.es5.js",
    "minify:list-view-es5": "uglifyjs ListView.es5.js -o ListView.es5.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blasten/UITableView.js.git"
  },
  "author": "Emmanuel Garcia <blasten@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blasten/UITableView.js/issues"
  },
  "homepage": "https://github.com/blasten/UITableView.js#readme",
  "devDependencies": {
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-plugin-es6-promise": "^1.0.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "expect.js": "^0.3.1",
    "mocha": "^2.4.5",
    "npm-run-all": "^3.1.2",
    "rollup": "^0.37.0",
    "rollup-plugin-babel": "^2.7.1",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony"
  },
  "babel": {
    "env": {
      "es5": {
        "presets": [
          "es2015-rollup"
        ],
        "plugins": [
          "async-to-promises",
          "es6-promise"
        ]
      },
      "es6": {
        "plugins": [
          "async-to-promises"
        ]
      }
    }
  }
}
